{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "paths": {
            "unicpeak-ui/*": [
                "./*"
            ]
        },
        "typeRoots": ["node_modules/@types", "src/types"]
    },
    "include": [
        "assets/**/*",
        "components/**/*",
        "constants/**/*",
        "helpers/**/*",
        "hooks/**/*",
        "primitives/**/*",
        "theme/**/*",
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "declarations.d.ts"
    ],
    "exclude": ["node_modules", "build"]
}